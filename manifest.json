{
  "manifest_version": 3,
  "name": "Easy Shortcuts",
  "version": "2.0",
  "description": "A beautiful radial menu with customizable shortcuts. Press Ctrl+M anywhere to quickly access your favorite sites.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configure Radial Menu"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-menu": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Toggle the radial menu at cursor position"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}